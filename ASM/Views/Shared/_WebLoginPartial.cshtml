@{
}
@using ASM.Models
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@using ASM.Constant

@{string emailAddress = Context.Session.GetString(SessionKey.Khachhang.KH_Email);}
@{string fullName = Context.Session.GetString(SessionKey.Khachhang.KH_FullName);}
@{string cart = Context.Session.GetString("cart");}

    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="cart" class="nav-link text-dark" href="/Home/Cart">
                @if (cart != null && cart != "")
                {
                    <img id="imgCart" src="~/images/monan/cartA.png" style="width:30px" />
                }
                else
                {
                    <img id="imgCart" src="~/images/monan/cart.png" style="width:30px" />
                }
            </a>
        </li>
        @if (emailAddress != null && emailAddress != "")
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="information" href="/Home/Info">Xin Chào @fullName</a>
            </li>            
            <li class="nav-item">
                <a class="nav-link text-dark" id="history" href="/Home/History">Đơn hàng |</a>
            </li>
            <li class="nav-item">
                <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="login" href="/Home/Login">Đăng nhập</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" id="register" href="/Home/Register">Đăng kí</a>
            </li>
        }
    </ul>
